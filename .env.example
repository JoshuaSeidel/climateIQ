# ClimateIQ Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application Settings
# =============================================================================
CLIMATEIQ_PORT=8420
CLIMATEIQ_SECRET_KEY=your-super-secret-key-change-this-in-production

# Debug mode (set to false in production)
CLIMATEIQ_DEBUG=true

# =============================================================================
# Database (TimescaleDB / PostgreSQL)
# =============================================================================
CLIMATEIQ_DB_HOST=localhost
CLIMATEIQ_DB_PORT=5432
CLIMATEIQ_DB_NAME=climateiq
CLIMATEIQ_DB_USER=climateiq
CLIMATEIQ_DB_PASSWORD=your-secure-password

# Full connection URL (alternative to individual settings)
# DATABASE_URL=postgresql+asyncpg://climateiq:password@localhost:5432/climateiq

# =============================================================================
# Redis (Caching & Pub/Sub)
# =============================================================================
CLIMATEIQ_REDIS_HOST=localhost
CLIMATEIQ_REDIS_PORT=6379
CLIMATEIQ_REDIS_DB=0

# =============================================================================
# MQTT (Sensor Data)
# =============================================================================
CLIMATEIQ_MQTT_BROKER=localhost
CLIMATEIQ_MQTT_PORT=1883
CLIMATEIQ_MQTT_USERNAME=
CLIMATEIQ_MQTT_PASSWORD=
CLIMATEIQ_MQTT_USE_TLS=false

# =============================================================================
# Home Assistant Integration
# =============================================================================
CLIMATEIQ_HOME_ASSISTANT_URL=http://homeassistant.local:8123
CLIMATEIQ_HOME_ASSISTANT_TOKEN=your-long-lived-access-token

# =============================================================================
# LLM Providers (Configure at least one for AI features)
# =============================================================================

# Anthropic (Claude) - Recommended
CLIMATEIQ_ANTHROPIC_API_KEY=

# OpenAI (GPT)
CLIMATEIQ_OPENAI_API_KEY=

# Google (Gemini)
CLIMATEIQ_GEMINI_API_KEY=

# xAI (Grok)
CLIMATEIQ_GROK_API_KEY=

# Local LLMs
CLIMATEIQ_OLLAMA_URL=http://localhost:11434
CLIMATEIQ_LLAMACPP_URL=http://localhost:8080

# =============================================================================
# Weather Service
# =============================================================================
# Weather data is sourced from Home Assistant's weather entity.
# Configure the weather entity in the ClimateIQ settings UI.
# No separate API key is needed.

# =============================================================================
# Embedding Configuration
# =============================================================================
# Default embedding provider (anthropic, openai, gemini)
EMBEDDING_PROVIDER=anthropic
EMBEDDING_MODEL=voyage-3
EMBEDDING_DIMENSIONS=1024

# =============================================================================
# GitHub (Optional - for auto-updates)
# =============================================================================
GITHUB_REPO=climateiq/climateiq
GITHUB_TOKEN=

# =============================================================================
# Logging
# =============================================================================
CLIMATEIQ_LOG_LEVEL=INFO

# =============================================================================
# Docker-specific (used by docker-compose)
# =============================================================================
# COMPOSE_PROJECT_NAME=climateiq
